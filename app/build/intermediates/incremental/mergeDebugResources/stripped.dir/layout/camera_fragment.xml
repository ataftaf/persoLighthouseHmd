<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                  
                                                        

  
                                                                                                 
             
                 
                                                                              
         

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context="com.google.learning.brain.mobile.transfer.android.MainActivity" android:tag="layout/camera_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextureView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        style="@style/BigButton"
        android:tag="binding_1"                                               
        android:background="@drawable/btn_big_gray"
        app:layout_constraintBottom_toTopOf="@+id/classes_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

      <TextView
          style="@style/BigButtonTitle"
          android:tag="binding_2"                                              />
    </LinearLayout>

    <LinearLayout
        style="@style/BigButton"
        android:id ="@+id/trainButton"
        android:tag="binding_3"                                                                               
        android:background="@drawable/btn_big_green"
        android:clickable="true"
        android:focusable="true"
                                                                             
        app:layout_constraintBottom_toTopOf="@+id/classes_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

      <TextView
          style="@style/BigButtonTitle"
          android:text="@string/train_action" />
    </LinearLayout>

    <LinearLayout
        style="@style/BigButton"
        android:id="@+id/pauseButton"
        android:background="@drawable/btn_big_yellow"
        android:clickable="true"
        android:focusable="true"
        android:tag="binding_4"                                             
        app:layout_constraintBottom_toTopOf="@+id/classes_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

      <TextView
          style="@style/BigButtonTitle"
          android:text="@string/pause_action" />

      <TextView
          style="@style/BigButtonSubtitle"
          android:tag="binding_5"                    
                                                                     />
    </LinearLayout>

    <LinearLayout
        style="@style/BigButton"
        android:tag="binding_6"                                         
        android:background="@drawable/btn_big_green"
        android:clickable="true"
        android:focusable="true"
                                                                             
        app:layout_constraintBottom_toTopOf="@+id/classes_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

      <TextView
          style="@style/BigButtonTitle"
          android:text="@string/resume_action" />

      <TextView
          style="@style/BigButtonSubtitle"
          android:tag="binding_7"                    
                                                                     />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/classes_bar"
        android:baselineAligned="false"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_finder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

      <LinearLayout
          style="@style/ClassButton"
          android:tag="binding_8"                                            
          android:id="@+id/class_btn_1"
                                               
                                             
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight=".25"
          android:orientation="vertical">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_label_triangle" />

        <TextView
                                  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:tag="binding_9"            
                                                     
                                                    />
      </LinearLayout>

      <LinearLayout
          style="@style/ClassButton"
          android:tag="binding_10"                                           
          android:id="@+id/class_btn_2"
                                               
                                             
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight=".25"
          android:orientation="vertical">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_label_circle" />

        <TextView
                                  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:tag="binding_11"           
                                                     
                                                    />
      </LinearLayout>

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
         